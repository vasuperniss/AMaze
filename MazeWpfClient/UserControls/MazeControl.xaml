<UserControl x:Class="MazeWpfClient.UserControls.MazeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeWpfClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Width="Auto" Height="Auto" BorderBrush="#FFA61C1C" BorderThickness="2">
        <Grid Background="AntiqueWhite" Width="Auto" Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Canvas DataContext="{Binding Maze}" x:Name="canvas" Grid.Row="1" Margin="5" Width="Auto" Height="Auto" DataContextChanged="canvasContextChanged"/>
        </Grid>
    </Border>
</UserControl>
